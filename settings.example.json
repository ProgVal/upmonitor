{
    "contact": [
        "bofh@example.org"
    ],
    "log": {
        "level": "DEBUG",
        "format": "%(asctime)s %(levelname)8s %(name)s: %(message)s"
    },
    "interval": 10,
    "secret": "random passphrase",
    "plugins": {
        "upmonitor/plugins/debug.py": {
        },
        "upmonitor/plugins/mail_notification.py": {
            "dry_run": true
        },
        "upmonitor/plugins/latency.py": {
            "interval": 10,
            "alert_threshold": 0,
            "targets": ["Desktop_One", "Desktop_Two", "Server"]
        },
        "upmonitor/plugins/smtp.py": {
            "targets": ["Desktop_One", "Desktop_Two", "Server"],
            "interval": 10
        }
    },
    "hosts": {
        "Desktop_One": {
            "daemon": {
                "address": "0.0.0.0",
                "port": 9630
            },
            "monitor": {
                "Server": {
                    "address": "server.example.org",
                    "connect_delay": 5,
                    "reconnect_delay": 0,
                    "notify_down": false,
                    "notify_up": false
                },
                "Desktop_Two": {
                    "address": "192.168.1.156",
                    "connect_delay": 5,
                    "reconnect_delay": 0,
                    "notify_down": true,
                    "notify_up": true
                }
            }
        },
        "Desktop_Two": {
            "daemon": {
                "address": "0.0.0.0",
                "port": 9631
            },
            "monitor": {
                "Desktop_One": {
                    "address": "192.168.1.150",
                    "connect_delay": 5,
                    "reconnect_delay": 0,
                    "notify_down": true,
                    "notify_up": true
                },
                "Server": {
                    "address": "server.example.org",
                    "connect_delay": 5,
                    "reconnect_delay": 0,
                    "notify_down": false,
                    "notify_up": false
                }
            }
        },
        "Server": {
            "daemon": {
                "address": "0.0.0.0",
                "port": 9630
            },
            "monitor": {
                "Desktop_One": {
                    "address": "home.example.org",
                    "connect_delay": 5,
                    "reconnect_delay": 0,
                    "notify_down": true,
                    "notify_up": true
                },
                "Desktop_Two": {
                    "address": "home.example.org",
                    "connect_delay": 5,
                    "reconnect_delay": 0,
                    "notify_down": true,
                    "notify_up": true
                }
            }
        }
    }
}
